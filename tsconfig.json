{
	"include": [
		"src",
		"types"
	],
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"jsx": "preserve",
		"baseUrl": "./",
		"paths": {
			"$components/*": [
				"./src/components/*"
			],
			"$stores/*": [
				"./src/stores/*"
			],
			"$helpers/*": [
				"./src/helpers/*"
			],
			"$actions/*": [
				"./src/actions/*"
			],
			"$pages/*": [
				"./src/pages/*"
			],
			"*": [
				".snowpack/types/*"
			]
		},
		/* noEmit - Snowpack builds (emits) files, not tsc. */
		"noEmit": true,
		/* Additional Options */
		// "strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true,
		"importsNotUsedAsValues": "error"
	},
	"exclude": [
		"node_modules/*",
		".svelte"
	]
}